{% block title %}Equipement
{% endblock %}

{% block body %}
	<h4 class="text-center">Equipement</h4>

	<div class="container-table">
		<p>
			{{ equipment.name }}
		</p>

		{% include '_partials/_partials_table_edit.html.twig' with {
