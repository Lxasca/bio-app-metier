{% extends 'base.html.twig' %}

{% block title %}Equipement
{% endblock %}

{% block body %}
	<h4>
		<i class="fas fa-align-right me-3"></i>
		Liste des équipements
	</h4>

	<div class="container-table">
		<table class="table">
			<thead>
				<tr>
					<th>Nom</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for equipment in equipment %}
					<tr>
						<td>{{ equipment.name }}</td>
						<td>
							{% include '_partials/_partials_table_actions.html.twig' with {
								'entity_type': 'equipment',
								'entity_id': equipment.id,
								'show_route': 'app_equipment_show',
								'edit_route': 'app_equipment_edit'
							} %}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Pas d'équipement.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<a href="{{ path('app_equipment_new') }}">Créer un nouvel équipement</a>
{% endblock %}
