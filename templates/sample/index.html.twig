{% extends 'base.html.twig' %}

{% block title %}Liste des échantillons
{% endblock %}

{% block body %}
	<h4>
		<i class="fas fa-align-right me-3"></i>
		Liste des échantillons
	</h4>

	<div class="container-table">
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Type</th>
					<th>Source</th>
					<th>Date de collecte</th>
					<th>Projet</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for sample in samples %}
					<tr>
						<td>{{ sample.status }}</td>
						<td>{{ sample.type }}</td>
						<td>{{ sample.source }}</td>
						<td>{{ sample.collectionDate ? sample.collectionDate|date('d/m/Y') : '' }}</td>

						<td>
							{% if sample.project %}
								{{ sample.project.name }}
								<a href="{{ path('app_project_show', {'id': sample.project.id}) }}">
									<i class="fas fa-up-right-from-square ms-1"></i>
								</a>
							{% endif %}

						</td>

						<td>
							{% include '_partials/_partials_table_actions.html.twig' with {
								'entity_type': 'sample',
								'entity_id': sample.id,
								'show_route': 'app_sample_show',
								'edit_route': 'app_sample_edit'
							} %}
							<a href="{{ path('app_test_new', {'sampleId': sample.id}) }}">Créer un test</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Aucun échantillon.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
