{% extends 'base.html.twig' %}

{% block title %}Echantillon
{% endblock %}

{% block body %}
	<h4 class="text-center">Echantillon</h4>

	<div class="container-table">
		<p>
			Collecté le
			{{ sample.collectionDate ? sample.collectionDate|date('d/m/Y') : '' }}
		</p>
		<p>
			{{ sample.source }}
		</p>
		<p>
			{{ sample.status }}
		</p>

		{% include '_partials/_partials_table_edit.html.twig' with {
			'entity_type': 'sample',
			'entity_id': sample.id,
			'edit_route': 'app_sample_edit'
		} %}
	</div>

	<a href="{{ path('app_sample_index') }}">Retourner à la liste des échantillons</a>

	<a href="{{ path('app_sample_edit', {'id': sample.id}) }}">Editer</a>

	{{ include('sample/_delete_form.html.twig') }}
{% endblock %}
